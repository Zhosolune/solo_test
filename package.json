{
  "name": "solo_test",
  "private": true,
  "version": "0.0.0",
  "description": "雷达信号分析软件 - 基于Electron的桌面应用",
  "author": "Radar Signal Analysis Team",
  "main": "main.js",
  "scripts": {
    "client:dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron-main": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently \"npm run client:dev\" \"npm run server:dev\" \"wait-on http://localhost:3000 && npm run build:electron-main && electron main.js\"",
    "electron:build": "npm run build && npm run build:electron-main && electron-builder",
    "electron:pack": "npm run build && npm run build:electron-main && electron-builder --dir",
    "electron:dist": "npm run build && npm run build:electron-main && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "check": "tsc --noEmit",
    "server:dev": "nodemon",
    "dev": "concurrently \"npm run client:dev\" \"npm run server:dev\""
  },
  "dependencies": {
    "antd": "^5.26.7",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "lucide-react": "^0.511.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.3.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.0.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/cors": "^2.8.19",
    "@types/electron": "^1.4.38",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vercel/node": "^5.3.6",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-dev-locator": "^1.0.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-trae-solo-badge": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.radar.signal.analysis",
    "productName": "雷达信号分析软件",
    "asar": true,
    "directories": {
      "output": "build-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "雷达信号分析软件"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon.png"
    },
    "forceCodeSigning": false
  }
}
